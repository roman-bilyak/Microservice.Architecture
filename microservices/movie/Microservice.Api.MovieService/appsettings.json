{
  "Authentication": {
    "JwtBearer": {
      "Authority": "https://localhost:7111",
      "Audience": "movie-service"
    }
  },
  "ConnectionStrings": {
    "MovieServiceDbContext": "Server=localhost,1433;Database=Microservice.MovieService;User Id=sa;Password=yourStrong(!)Password;TrustServerCertificate=True;"
  },
  "Swagger": {
    "Title": "Movie Service API",
    "Version": "v1",
    "Security": {
      "Name": "OAuth2",
      "Type": "OAuth2",
      "Scheme": "Bearer",
      "Flow": {
        "GrantType": "AuthorizationCode",
        "AuthorityUrl": "https://localhost:7111",
        "AuthorizationUrl": "/connect/authorize",
        "TokenUrl": "/connect/token",
        "ClientId": "api_client",
        "UsePkce": true,
        "Scopes": {
          "movie-service": "Movie Service API"
        }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
