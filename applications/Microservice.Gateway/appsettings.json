{
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:7100"
  },
  "Authentication": {
    "Scheme": "Bearer",
    "IdentityServer": {
      "Authority": "https://localhost:7111",
      "ApiName": "gateway"
    }
  },
  "Swagger": {
    "Title": "Gateway API",
    "Version": "v1",
    "Security": {
      "Name": "OAuth2",
      "Type": "OAuth2",
      "Scheme": "Bearer",
      "Flow": {
        "GrantType": "AuthorizationCode",
        "AuthorityUrl": "https://localhost:7111",
        "AuthorizationUrl": "/connect/authorize",
        "TokenUrl": "/connect/token",
        "ClientId": "api_client",
        "UsePkce": true,
        "Scopes": {
          "identity-service": "Identity Service API",
          "movie-service": "Movie Service API",
          "payment-service": "Payment Service API",
          "review-service": "Review Service API",
          "test-service": "Test Service API"
        }
      }
    },
    "IgnorePaths": [
      "/configuration/FileConfiguration/Get",
      "/configuration/FileConfiguration/Post",
      "/outputcache/{region}"
    ]
  },
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7201
        }
      ],
      "UpstreamPathTemplate": "/api/IS/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": [ "identity-service" ]
      }
    },
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7202
        }
      ],
      "UpstreamPathTemplate": "/api/MS/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": [ "movie-service" ]
      }
    },
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7203
        }
      ],
      "UpstreamPathTemplate": "/api/PS/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": [ "payment-service" ]
      }
    },
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7204
        }
      ],
      "UpstreamPathTemplate": "/api/RS/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": [ "review-service" ]
      }
    },
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7205
        }
      ],
      "UpstreamPathTemplate": "/api/TS/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": [ "test-service" ]
      }
    }
  ],
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
